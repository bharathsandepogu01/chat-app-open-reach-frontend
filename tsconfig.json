{
	"compilerOptions": {
		"outDir": "./build/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "esnext",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@public/*": ["public/*"],
			"@styles/*": ["src/styles/*"],
			"@utils/*": ["src/utils/*"],
			"@hooks/*": ["src/hooks/*"],
			"@config/*": ["src/config/*"],
			"@api/*": ["src/api/*"],
			"@store/*": ["src/store/*"],
			"@src/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/declaration.module.d.ts"],
	"exclude": ["node_modules"]
}					